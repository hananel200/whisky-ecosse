{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-4 page-site">
        <div class="row">
            <div class="col-md-6 mb-3">
                {% block menu %}
                {% endblock %}
            </div>
            <div class="col-md-6 mt-4">
            {{ form_start(form) }}
            <div class="card card-sm">
                <div class="card-body row no-gutters align-items-center">
                    <div class="col-auto">
                        <i class="fas fa-search h4 text-body"></i>
                    </div>
                    <div class="col">
                        <div class="form-control-lg mb-2">
                            {{ form_row(form.search) }}
                        </div>
                        {#<input class="form-control form-control-lg form-control-borderless" type="search" placeholder="Recherche">#}
                    </div>
                    <!--end of col-->
                    <div class="col-auto">
                        <button class="btn btn-dark" type="submit">Search</button>
                    </div>
                    <!--end of col-->
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    {% include 'whisky/whiskyList.html.twig' %}
    </div>

    <div class="row">


    </div>
    <div class="col-md-6 mb-3">

    </div>
    </div>



    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><img src="/img/logo_site.png"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="notice">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <a href="{{ path('panier') }}" type="button" class="btn btn-primary">Aller au panier</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="/js/ajax.js"></script>
{% endblock %}