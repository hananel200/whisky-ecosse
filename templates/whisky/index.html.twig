{% extends 'whisky/base.html.twig' %}

{% block menu %}

    <div class="container mt-4">
        {% if (app.request.method == "POST") %}
            <h3>Résultats de la recherche</h3>
        {% else %}
            <h3>Ecosse : Tous les whiskies</h3>
            <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #66afe9;
        border-radius:15px; padding: 0;">
                <div id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="font-size: 1.2rem">
                                Régions
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                {% for region in regions %}
                                    <a class="dropdown-item" href="{{ path('whisky_regions', {'nom' : region.nom}) }}">{{
                                        region.nom }}</a>
                                {% endfor %}
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        {% endif %}
    </div>


{% endblock %}